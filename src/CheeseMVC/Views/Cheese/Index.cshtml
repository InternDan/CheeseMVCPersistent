@model List<CheeseMVC.Models.Cheese>

<h1>@ViewBag.Title</h1>

@if (Model.Count == 0)
{
    <p>@ViewBag.message</p>
}

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Type</th>
        <th>Rating</th>
        <th>Edit</th>
    </tr>

    @foreach (var cheese in Model)
    {
    <tr>
        <td>@cheese.Name</td>
        <td>@cheese.Description</td>
        <td>@cheese.Type</td>
        <td><a asp-controller="Cheese" asp-action="Edit" asp-route-cheeseId="@cheese.CheeseId">edit</a></td>
    </tr>
    }
</table>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>
